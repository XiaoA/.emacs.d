class BankAccount

  def initialize(name) 
    @transactions - [] # @transactions is an instance variable.
    @balance = 0       # @balance is an instance variable.
  end

  def deposit
    print "How much would you like to deposit? "
    amount - gets.chomp
    @balance += amount.to_f
    puts "$#{amount} deposited."
  end

  def show_balance
    puts "Your balance is #{@balance}."
  end

end

bank_account = BankAccount.new("Andrew Buckingham")
bank_account.class # => BankAccount




